<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <EditTextPreference
        android:defaultValue="60"
        android:inputType="numberDecimal"
        android:key="travel_mode_bicycling_start_stop"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Bicycling Lock/Unlock time [s]" />

    <EditTextPreference
        android:defaultValue="60"
        android:inputType="numberDecimal"
        android:key="travel_mode_driving_start_stop"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Driving Start/Stop Time [s]" />

    <EditTextPreference
        android:defaultValue="3"
        android:inputType="numberDecimal"
        android:key="travel_mode_driving_cost"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Driving Cost per km [SEK/km]" />

    <EditTextPreference
        android:defaultValue="200"
        android:inputType="numberDecimal"
        android:key="travel_mode_driving_emissions"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Driving Emissions per km [g CO2e/km]" />

    <EditTextPreference
        android:defaultValue="30"
        android:inputType="numberDecimal"
        android:key="travel_mode_transit_cost"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Transit cost per travel [SEK]" />

    <EditTextPreference
        android:defaultValue="50"
        android:inputType="numberDecimal"
        android:key="travel_mode_transit_emissions"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Transit emissions per km [g CO2e/km]" />

</PreferenceScreen>
